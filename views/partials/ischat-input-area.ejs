<div id="input-area"
    class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-slate-950 via-slate-950 to-transparent pt-10 pb-6 px-4">
    <div class="max-w-3xl mx-auto">
        <div class="mb-3 flex items-center gap-2 flex-wrap">
            <label for="model-select" class="text-sm text-slate-400 flex items-center gap-2">
                <i data-lucide="cpu" class="h-4 w-4"></i>
                Model:
            </label>
            <select id="model-select" onchange="handleModelChange()"
                class="px-3 py-1.5 bg-slate-800/80 text-slate-200 border border-slate-700/50 rounded-lg text-sm focus:outline-none focus:border-blue-500/50 transition-colors">
                <optgroup label="IshChat Models">
                    <option value="grok-3-mini">Grok 3 Mini</option>
                    <option value="grok-4-fast-reasoning">Grok 4 Fast Reasoning</option>
                    <option value="grok-4-fast-non-reasoning">Grok 4 Fast Non-Reasoning</option>
                    <option value="gpt-oss-120b">GPT OSS 120B</option>
                </optgroup>
            </select>
        </div>

        <div
            class="relative flex items-end w-full p-4 bg-slate-800/50 rounded-2xl border border-slate-700/50 shadow-lg focus-within:border-blue-500/30 focus-within:shadow-blue-500/10 focus-within:shadow-xl transition-all duration-200 backdrop-blur-sm">
            <textarea id="user-input" rows="1"
                class="w-full max-h-[200px] py-0 pr-10 bg-transparent text-slate-200 placeholder-slate-400 border-0 focus:ring-0 resize-none outline-none leading-6"
                placeholder="Send a message..." onkeydown="handleEnter(event)" oninput="autoResize(this)"></textarea>
            <button onclick="sendMessage()"
                class="absolute right-3 bottom-2.5 p-2 rounded-lg text-slate-400 hover:text-white hover:bg-blue-600 transition-all duration-200 disabled:opacity-30 disabled:hover:bg-transparent disabled:hover:text-slate-400"
                id="send-btn">
                <i data-lucide="send" class="h-4 w-4"></i>
            </button>
        </div>
        <div class="text-center text-xs text-gray-500 mt-3">
            IshChat API Demo
        </div>
    </div>
</div>